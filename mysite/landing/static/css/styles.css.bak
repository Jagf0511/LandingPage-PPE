/* Estilos generales */
.aboutus {
    position: relative;
    padding: 4rem 0;
    color: white;
    text-align: center;
    min-height: 400px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-image: url('../../Imgs/photos/aboutus.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.aboutus::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(18, 18, 18, 0.9), rgba(18, 18, 18, 0.7));
    z-index: 1;
}

.aboutus > * {
    position: relative;
    z-index: 2;
}

/* Estilos modernos para la sección de comentarios */
.comments-section {
    background: #0a0a0a;
    padding: 4rem 1.5rem;
    position: relative;
    overflow: hidden;
    border: none;
    border-radius: 16px;
    margin: 2rem auto;
    max-width: 1400px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.4);
}

.comments-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--secondary-color), transparent);
}

.comm {
    position: relative;
    z-index: 1;
    background: transparent;
    border-radius: 12px;
    padding: 1.5rem;
    border: none;
    max-width: 1000px;
    width: 100%;
    margin: 0 auto;
}

.comments-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin: 0 auto 3rem;
    position: relative;
    display: inline-block;
    left: 50%;
    transform: translateX(-50%);
    padding-bottom: 1rem;
    color: #ffffff;
}

.comments-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, var(--secondary-color), transparent);
    border-radius: 3px;
}

.comments-container {
    max-width: 1000px;
    width: 100%;
    margin: 0 auto;
    padding: 0 1rem;
    background: transparent;
    border: none;
    border-radius: 0;
}

.comment-card {
    position: relative;
    padding: 2rem;
    margin: 0 0 1.5rem 0;
    background: #121212;
    border: 1px solid #2a2a2a;
    border-left: 4px solid var(--secondary-color);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    color: #f0f0f0;
    overflow: hidden;
    border-radius: 0 8px 8px 0;
    width: 100%;
    box-sizing: border-box;
}

.comment-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--secondary-color);
    pointer-events: none;
    opacity: 1;
    transition: all 0.3s ease;
    border-radius: 20px 0 0 20px;
}

.comment-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0, 255, 206, 0.05) 0%, transparent 100%);
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.comment-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
}

.comment-card:hover::before {
    opacity: 1;
}

.comment-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.comment-header {
    display: flex;
    align-items: center;
    margin-bottom: 0.75rem;
}

.comment-user {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.comment-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--secondary-color), #00d1b2);
    color: var(--primary-color);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1.1rem;
    box-shadow: 0 2px 8px rgba(0, 255, 206, 0.3);
}

.comment-user-info h5 {
    margin: 0;
    color: #ffffff;
    font-weight: 600;
    font-size: 1.15rem;
    letter-spacing: 0.3px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.comment-user-info h5::before {
    content: '';
    display: inline-block;
    width: 24px;
    height: 2px;
    background: var(--secondary-color);
}

.comment-date {
    color: #777;
    font-size: 0.85rem;
    margin: 0;
    font-weight: 400;
}

.comment-time {
    color: #a0a0a0;
    font-size: 0.85rem;
    margin-top: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 400;
    font-family: 'Inter', sans-serif;
}

.comment-time i {
    color: var(--secondary-color);
    font-size: 0.8em;
}

.comment-content {
    color: #f0f0f0;
    line-height: 1.8;
    margin: 1.25rem 0 0;
    padding: 0;
    font-size: 1.05rem;
    font-weight: 400;
    letter-spacing: 0.2px;
    position: relative;
    z-index: 2;
}

.comment-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: 1rem;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
}

.comment-actions .btn {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-muted);
    padding: 0.35rem 1rem;
    border-radius: 4px;
    font-size: 0.8rem;
    transition: all 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.comment-actions .btn:hover {
    background: rgba(255, 75, 75, 0.1);
    color: #ff4b4b;
    border-color: rgba(255, 75, 75, 0.3);
}

.add-comment-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem 2.5rem;
    background: var(--secondary-color);
    color: #000000;
    border: none;
    border-radius: 4px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    margin: 2rem 0 4rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.85rem;
    position: relative;
    overflow: hidden;
    z-index: 1;
}

.add-comment-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 255, 206, 0.4);
}

.add-comment-btn:active {
    transform: translateY(0);
}

.add-comment-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, #00d4aa, var(--secondary-color));
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
}

.add-comment-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 255, 206, 0.4);
}

.add-comment-btn:hover::before {
    opacity: 1;
}

.add-comment-btn i {
    transition: transform 0.3s ease;
}

.add-comment-btn:hover i {
    transform: rotate(90deg);
}

.no-comments {
    text-align: center;
    padding: 4rem 2rem;
    background: #121212;
    border: 1px solid #2a2a2a;
    margin: 2rem 0;
    color: #f0f0f0;
    border-radius: 0;
    position: relative;
    font-weight: 300;
}

.no-comments::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--secondary-color);
}

.no-comments i {
    font-size: 2.5rem;
    color: var(--secondary-color);
    margin-bottom: 1rem;
    opacity: 0.8;
}

.no-comments h4 {
    color: var(--text-color);
    margin: 0 0 0.5rem;
    font-size: 1.2rem;
    font-weight: 500;
}

.no-comments p {
    color: var(--text-muted);
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
}

.no-comments i {
    font-size: 3rem;
    color: var(--secondary-color);
    margin-bottom: 1.5rem;
    opacity: 0.8;
    display: inline-block;
    transition: all 0.3s ease;
}

.no-comments:hover i {
    transform: scale(1.1);
    opacity: 1;
}

.no-comments h4 {
    color: var(--text-color);
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
    font-weight: 400;
}

.no-comments p {
    color: var(--text-muted);
    margin: 0;
    font-size: 1.05rem;
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.6;
}

/* Efecto de línea decorativa */
.comment-card::before {
    content: '';
    position: absolute;
    left: 24px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, transparent, var(--secondary-color), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.comment-card:hover::before {
    opacity: 0.3;
}

.comment-card:first-child::before {
    top: 50%;
}

.comment-card:last-child::before {
    bottom: 50%;
}

/* Estilos para la galería */
.gallery .container-three {
    margin-top: 2rem;
}

.gallery img {
    margin-bottom: 1.5rem;
    border-radius: 0.5rem;
    transition: transform 0.3s ease;
}

.gallery img:hover {
    transform: scale(1.03);
}

/* Estilos para el carrusel */
.carousel-item img {
    max-height: 90vh;
    object-fit: cover;
}

.carousel-caption {
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 1rem;
    padding: 1.5rem;
    bottom: 30%;
}

/* Estilos para la sección de comentarios */
.comments-section {
    background-color: #0a0a0a;
    padding: 4rem 0;
}

.comment-card {
    background: #121212;
    border-radius: 0.5rem;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
}

.comment-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    color: #ffffff;
}

.comment-content {
    color: #f0f0f0;
    line-height: 1.6;
}

/* Estilos para el formulario de comentarios */
.comment-form {
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    padding: 2rem;
    margin-top: 2rem;
}

/* Estilos responsivos */
@media (max-width: 768px) {
    .carousel-caption {
        bottom: 15%;
        padding: 0.75rem;
    }
    
    .carousel-caption h5 {
        font-size: 1.25rem !important;
    }
    
    .carousel-caption p {
        font-size: 0.9rem !important;
        margin-bottom: 0.5rem;
    }
}
